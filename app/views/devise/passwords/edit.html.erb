<div class="flex items-center justify-center md:bg-base-200">
  <div class="w-full max-w-md bg-white shadow-lg rounded-lg p-8 md:my-20">
    <h2 class="text-2xl font-bold text-center mb-6">パスワードを変更</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="form-control mb-4">
        <%= f.label :password, "新しいパスワード", class: "label" %>
        <% if @minimum_password_length %>
          <em class="text-sm text-gray-500">(<%= @minimum_password_length %>文字以上)</em>
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "input input-bordered w-full" %>
      </div>

      <div class="form-control mb-4">
        <%= f.label :password_confirmation, "新しいパスワードを確認", class: "label" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input input-bordered w-full" %>
      </div>

      <div class="form-control">
        <%= f.submit "パスワードを変更", class: "btn btn-primary w-full" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>

