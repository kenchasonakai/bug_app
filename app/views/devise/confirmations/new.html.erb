<div class="flex items-center justify-center md:bg-base-200">
  <div class="w-full max-w-md bg-white shadow-lg rounded-lg p-8 md:my-20">
    <h2 class="text-2xl font-bold text-center mb-6">確認メール再送信</h2>

    <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-control mb-4">
        <%= f.label :email, class: "label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input input-bordered w-full", value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) %>
      </div>

      <div class="form-control">
        <%= f.submit "確認メールを再送信", class: "btn btn-primary w-full" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>

